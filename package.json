{
	"name": "figma-icon-font-generator",
	"version": "1.0.0",
	"description": "Figma icon font generator plugin",
	"type": "module",
	"engines": {
		"node": ">=20.6.0"
	},
	"author": {
		"name": "Victor Assis",
		"url": "https://github.com/victor-assis"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/victor-assis/figma-icon-font-generator"
	},
	"license": "MIT",
	"scripts": {
		"dev": "npx concurrently --raw \"npm run plugin:dev\" \"npm run ui:dev\"",
		"build": "npm run plugin:build && npm run ui:build",
		"lint": "eslint .",
		"test": "vitest run",
		"plugin:tsc": "npx tsc -p plugin/tsconfig.json",
		"plugin:dev": "npm run esbuild -- watch",
		"plugin:build": "npm run plugin:tsc && npm run esbuild -- build",
		"ui:tsc": "npx tsc -p ui/tsconfig.json",
		"ui:dev": "npm run vite:build -- --watch",
		"ui:build": "npm run vite:build && npm run ui:tsc",
		"esbuild": "dotenv -e .env -- node plugin/esbuild.mjs",
		"vite:build": "vite build --config ui/vite.config.ts"
	},
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.0",
		"@mui/icons-material": "^7.1.1",
		"@mui/lab": "7.0.0-beta.13",
		"@mui/material": "^7.1.1",
		"cheerio": "^1.1.0",
		"fast-xml-parser": "^5.2.5",
		"file-saver": "^2.0.5",
		"fs-extra": "^11.3.0",
		"js-base64": "^3.7.7",
		"jszip": "^3.10.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"styled-components": "^6.1.18",
		"svg2ttf": "^6.0.3",
		"svgicons2svgfont": "^15.0.1",
		"svgson": "^5.3.1",
		"ttf2eot": "^3.1.0",
		"ttf2woff": "^3.0.0",
		"ttf2woff2": "^3.0.0",
		"webfonts-generator": "^0.4.0",
		"xmldom": "^0.6.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@figma/plugin-typings": "^1.110.0",
		"@types/file-saver": "^2.0.7",
		"@types/node": "^24.0.3",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.3",
		"@types/svg2ttf": "^5.0.3",
		"@types/ttf2eot": "^2.0.2",
		"@types/ttf2woff": "^2.0.4",
		"@types/ttf2woff2": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^8.33.1",
		"@vitejs/plugin-react": "^4.4.1",
		"assert": "^2.1.0",
		"dotenv-cli": "^8.0.0",
		"esbuild": "^0.25.3",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-n": "^17.19.0",
		"eslint-plugin-perfectionist": "^4.12.3",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"prettier": "3.5.3",
		"react-dev-utils": "^12.0.1",
		"sass": "^1.87.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.1",
		"vite": "^6.3.4",
		"vite-plugin-node-polyfills": "^0.23.0",
		"vite-plugin-singlefile": "^2.2.0",
		"vite-plugin-svgr": "^4.3.0",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"SVG",
		"icons",
		"creation",
		"fonts",
		"figma"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,js}": [
			"eslint --fix",
			"git add"
		],
		"src/**/*": [
			"stylelint --fix",
			"git add"
		],
		"*.{html,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"overrides": {
		"css-what": "6.2.1"
	}
}
