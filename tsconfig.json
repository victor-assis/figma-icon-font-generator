{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true, 
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": [
       "dom",
       "dom.iterable",
       "esnext",
       "es5",
       "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  }
}
